@model Employee
@{
    ViewBag.Title = "Create Employee";
}


    <form asp-controller="Employees" asp-action="Create" style="width: 300px;">
        <label asp-for="Name"></label>
        <input asp-for="Name"/>
        <span asp-validation-for="Name"></span>

        <label asp-for="Email"></label>
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
        <br />
        <input type="submit" value="Save" />
    </form>
    <div asp-validation-summary="All"></div>

@section scripts
{
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.7.1" asp-fallback-src="/scripts/lib/jquery/jquery.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.2/jquery.validate." asp-fallback-src="/scripts/lib/jquery/jquery-validate/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive." asp-fallback-src="/scripts/lib/jquery/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}